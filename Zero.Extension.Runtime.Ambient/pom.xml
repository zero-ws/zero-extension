<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>zero-plugins-extension</artifactId>
        <groupId>io.zerows</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>zero-extension-runtime-ambient</artifactId>
    <name>Zero.Extension.Runtime.Ambient</name>
    <dependencies>
        <!-- Kern -->
        <dependency>
            <groupId>io.zerows</groupId>
            <artifactId>zero-extension-runtime-skeleton</artifactId>
        </dependency>
        <!-- Plugin -->
        <dependency>
            <groupId>io.zerows</groupId>
            <artifactId>zero-core-feature-toolkit-expression</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <configuration>
                    <propertyProviderClass>io.zerows.extension.runtime.skeleton.secure.ZeroLiquibaseEncryption
                    </propertyProviderClass>
                    <!-- 配置文件路径 -->
                    <propertyFile>plugin/ambient/db.properties</propertyFile>
                    <changeLogFile>plugin/ambient/db.yml</changeLogFile>
                    <!-- 配置参数 -->
                    <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
                    <outputFileEncoding>UTF-8</outputFileEncoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>